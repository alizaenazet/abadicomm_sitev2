---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";

const galleryPage = await getEntry("site_content", "gallery");
const { title, description, images } = galleryPage!.data;
---

<Layout title={`${title} | Abadicomm`} description={description} openGraphImage="gallery">
    <div class="pt-32 pb-16 md:pt-40 md:pb-24">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16 space-y-4">
                <h1 class="text-4xl md:text-5xl font-bold">{title}</h1>
                <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                    {description}
                </p>
            </div>

            <div
                class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-2 md:gap-4"
            >
                {
                    (images??[]).map((imgSrc, index) => (
                        <div class="aspect-square overflow-hidden rounded-xl bg-secondary/20 group relative cursor-pointer">
                            <img
                                src={imgSrc}
                                alt={`Gallery Image ${index + 1}`}
                                loading="lazy"
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            />
                            {/* <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                <span class="text-white font-medium border border-white/50 px-4 py-2 rounded-full backdrop-blur-sm">
                                    View
                                </span>
                            </div> */}
                        </div>
                    ))
                }
            </div>

            <div class="mt-16 text-center">
                <p class="text-muted-foreground mb-6">
                    Want to see your event here?
                </p>
                <a
                    href="/#contact"
                    class="inline-block bg-primary text-primary-foreground px-8 py-3 rounded-full font-semibold hover:opacity-90 transition-opacity"
                >
                    Start Project With Us
                </a>
            </div>
        </div>
    </div>
</Layout>
