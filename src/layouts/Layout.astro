---
import "../styles/global.css";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Abadicomm - Trusted Event Organizer in Surabaya",
	description = "Abadicomm is the best and trusted Event Organizer in Surabaya, Indonesia. We provide creative and professional event management services.",
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<Header client:load />
		<main class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>
